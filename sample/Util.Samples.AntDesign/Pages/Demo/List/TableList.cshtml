@page
@model ApplicationDto
<page-header title="基础列表"></page-header>
<util-card show-border="false">
    @*查询表单*@
    <partial name="TableList.Query" />
    @*工具按钮*@
    <util-button class="mr-sm" color="Primary" icon="Plus" text="新建" on-click="add()"></util-button>
    <util-button id="btnSave" class="mr-sm" color="Primary" icon="Save" text="保存" on-click="save(btnSave)"></util-button>
    <util-button color="Danger" icon="Delete" text="删除" on-click="delete()"></util-button>
    @*提示语*@
    <util-alert class="my-md" type="Info" show-icon="true">
        已选择<strong class="text-primary mx-md">{{getCheckedLength()}}</strong>行
    </util-alert>
    @*表格*@
    <util-table id="tableApplication" query-param="queryParam" base-url="application" sort="CreationTime desc">
        <util-table-column type="Checkbox"></util-table-column>
        <util-table-column type="LineNumber"></util-table-column>
        <util-table-column for="Code" is-edit="true">
            <util-textbox for="Code"></util-textbox>
        </util-table-column>
        <util-table-column for="Name" is-edit="true">
            <util-textbox for="Name"></util-textbox>
        </util-table-column>
        <util-table-column for="Comment" width="30%" is-edit="true">
            <util-textbox for="Comment"></util-textbox>
        </util-table-column>
        <util-table-column for="Enabled">
            <util-table-column-display>
                <util-tag color-type="GeekBlue" ng-if="row.enabled">
                    启用
                </util-tag>
                <util-tag color-type="Red" ng-if="!row.enabled">
                    未启用
                </util-tag>
            </util-table-column-display>
            <util-table-column-control>
                <util-checkbox for="Enabled"></util-checkbox>
            </util-table-column-control>
        </util-table-column>
        <util-table-column for="RegisterEnabled">
            <util-table-column-display>
                <util-tag color-type="GeekBlue" ng-if="row.registerEnabled">
                    启用
                </util-tag>
                <util-tag color-type="Red" ng-if="!row.registerEnabled">
                    未启用
                </util-tag>
            </util-table-column-display>
            <util-table-column-control>
                <util-switch for="RegisterEnabled"></util-switch>
            </util-table-column-control>
        </util-table-column>
        <util-table-column title="操作">
            <util-button class="mr-sm" color="Primary" shape="Circle" icon="Edit" tooltip="编辑" on-click="edit(row.id)"></util-button>
            <util-button color="Danger" shape="Circle" icon="Delete" tooltip="删除" on-click="delete(row.id)"></util-button>
        </util-table-column>
    </util-table>
</util-card>