@model CreateRoleRequest

<util-form id="form" on-submit="submit(form,btnSubmit)">
    <util-card>
        <util-card-header>
            <util-card-title>
                编辑角色
            </util-card-title>
        </util-card-header>
        <util-card-content>
            <util-divider inset="true" />
            <util-layout class="mt30">
                <util-layout-item flex="50%" offset="5%">
                    <util-textbox for="Code"></util-textbox>
                </util-layout-item>
            </util-layout>
            <util-layout class="mt20">
                <util-layout-item flex="50%" offset="5%">
                    <util-textbox for="Name"></util-textbox>
                </util-layout-item>
            </util-layout>
            <util-layout class="mt20">
                <util-layout-item flex="70px" offset="5%" align="Center">
                    父角色：
                </util-layout-item>
                <util-layout-item align="Center">
                    <util-label for="ParentName" />
                    <util-button styles="Icon" on-click="openRolesDialog()" tooltip="选择父角色">
                        <util-icon material-icon="Search"></util-icon>
                    </util-button>
                </util-layout-item>
            </util-layout>
            <util-layout class="mt30">
                <util-layout-item flex="50%" offset="5%">
                    <util-slide-toggle for="Enabled"></util-slide-toggle>
                </util-layout-item>
            </util-layout>
            <util-layout class="mt40">
                <util-layout-item flex="50%" offset="5%">
                    <util-textarea for="Comment"></util-textarea>
                </util-layout-item>
            </util-layout>
        </util-card-content>
        <util-card-actions align="Right">
            <util-button text="返回" styles="Default" on-click="back()"></util-button>
            <util-button id="btnSubmit" type="Submit" color="Primary"></util-button>
        </util-card-actions>
    </util-card>
</util-form>