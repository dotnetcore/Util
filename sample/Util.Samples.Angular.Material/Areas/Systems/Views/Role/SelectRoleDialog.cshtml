@model RoleDto

<util-dialog-title>
    选择父角色
</util-dialog-title>
<util-dialog-title>
    <util-toolbar>
        <util-layout>
            <util-textbox model="queryParam.keyword" placeholder="搜索" on-change="search()"></util-textbox>
        </util-layout>
        <util-layout>
            <util-button styles="Icon" tooltip="刷新" on-click="refresh()">
                <util-icon material-icon="Sync"></util-icon>
            </util-button>
        </util-layout>
    </util-toolbar>
</util-dialog-title>
<util-dialog-content>
    <util-tree-table id="treeTable_select_role" base-url="role" query-param="queryParam" selection-mode="Single" selection="selection">
        <util-tree-table-column for="Name"></util-tree-table-column>
        <util-tree-table-column for="Code"></util-tree-table-column>
    </util-tree-table>
</util-dialog-content>
<util-dialog-actions align="Right">
    <util-button styles="Icon" tooltip="关闭" close-dialog="">
        <util-icon material-icon="Clear"></util-icon>
    </util-button>
    <util-button styles="Icon" tooltip="确定" on-click="select()">
        <util-icon material-icon="Done"></util-icon>
    </util-button>
</util-dialog-actions>