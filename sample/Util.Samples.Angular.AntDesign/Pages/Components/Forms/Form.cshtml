@page
@model FormModel
<page-header title="基础表单">
    将一个冗长或用户不熟悉的表单任务分成多个步骤，指导用户完成。
</page-header>
<nz-card>
    <util-form id="form">
        <util-form-item>
            <util-form-label text="哈哈" required="true" label-for="a">
            </util-form-label>
            <util-textbox for="Name" raw-id="a"></util-textbox>
        </util-form-item>
        <util-form-item>
            <util-form-label text="哈哈" required=""></util-form-label>
            <nz-form-control nzSpan="12">
                <nz-input-group>
                    <input nz-input type="password" placeholder="Password"/>
                </nz-input-group>
            </nz-form-control>
        </util-form-item>
        <util-form-item>
            <nz-form-control>
                <util-button id="btnSubmit" validate-form="true" on-click="submit(form,btnSubmit)" color="Primary" icon="Check">
                </util-button>
                <util-button on-click="test()" text="弹出层测试" icon="Eye"></util-button>
            </nz-form-control>
        </util-form-item>
    </util-form>
</nz-card>