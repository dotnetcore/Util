@page
@model FormModel
<page-header title="基础表单">
    将一个冗长或用户不熟悉的表单任务分成多个步骤，指导用户完成。
</page-header>
<nz-card>
    <util-form id="form" label-span="4" control-span="8" gutter="16" >
        <util-form-item>
            <util-form-label for="Name"></util-form-label>
            <util-textbox for="Name"></util-textbox>
        </util-form-item>
        <util-form-item>
            <util-form-label for="Age" ></util-form-label>
            <util-textbox for="Age"></util-textbox>
        </util-form-item>
        <util-form-item>
            <util-form-label label="下拉树"></util-form-label>
            <util-tree-select url="/api/tree" expand-all="true"></util-tree-select>
        </util-form-item>
        <util-form-item>
            <util-form-label label="分组下拉" ></util-form-label>
            <util-select url="/api/form/groupItems" multiple="true"></util-select>
        </util-form-item>
        <util-form-item>
            <util-form-label label="远程加载下拉" ></util-form-label>
            <util-select url="/api/application/items" sort="name" server-search="true" scroll-load="true" ></util-select>
        </util-form-item>
        <util-form-item>
            <util-form-label for="Nation" ></util-form-label>
            <util-select for="Nation"></util-select>
        </util-form-item>
        <util-form-item>
            <util-form-label for="DateTime" ></util-form-label>
            <util-date-picker for="DateTime"></util-date-picker>
        </util-form-item>
        <util-form-item>
            <util-form-label for="Comment" ></util-form-label>
            <util-textarea for="Comment"></util-textarea>
        </util-form-item>
        <util-form-item>
            <util-form-label for="Files"></util-form-label>
            <util-upload for="Files" url="/api/upload" data="data" list-type="PictureCard"></util-upload>
        </util-form-item>
        <util-form-item>
            <util-form-label for="Enabled" ></util-form-label>
            <util-checkbox for="Enabled"></util-checkbox>
        </util-form-item>
        <util-form-item>
            <util-form-label for="Gender" ></util-form-label>
            <util-radio for="Gender"></util-radio>
        </util-form-item>
        <util-form-item>
            <util-form-label for="Code" ></util-form-label>
            <util-checkbox-group for="Code" data="Gender"></util-checkbox-group>
        </util-form-item>
        <util-form-item>
            <util-form-label for="Enabled" ></util-form-label>
            <util-switch for="Enabled"></util-switch>
        </util-form-item>
        <util-form-item>
            <util-form-label for="Color" ></util-form-label>
            <util-color-picker for="Color" />
            {{model.color}}
        </util-form-item>
        <util-row>
            <util-column span="3">
                <util-button id="btnSubmit" validate-form="true" on-click="submit(form,btnSubmit)" color="Primary" icon="Check">
                </util-button>
                <util-button on-click="test()" text="弹出层测试" icon="Eye"></util-button>
            </util-column>
        </util-row>
    </util-form>
</nz-card>