			<PrivateAssets>all</PrivateAssets>
		</PackageReference>
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\src\Util.Data.Dapper.SqlServer\02-Util.Data.Dapper.SqlServer.csproj" />
